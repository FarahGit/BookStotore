<UserControl x:Class="ModuleBook.Views.BooksButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:infCommand="clr-namespace:BookStore.Core;assembly=BookStore.Core"
             xmlns:local="clr-namespace:ModuleBook.Views"
             mc:Ignorable="d">
    <Grid>
            <Button Content="Books"
                    FontSize="13"
                    Background="Transparent"
                    Command="{x:Static infCommand:GlobalCommands.NavigateCommand}"
                    CommandParameter="{x:Type local:BookListView}"/>
    </Grid>
</UserControl>
