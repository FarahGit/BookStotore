<UserControl x:Class="ModuleAuthor.Views.AuthorsButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:infCommand="clr-namespace:BookStore.Core;assembly=BookStore.Core"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ModuleAuthor.Views"
             mc:Ignorable="d">
    <Grid>
           <Button Content="Authors"
                   FontSize="13"
                   Background="Transparent"
                   Command="{x:Static infCommand:GlobalCommands.NavigateCommand}"
                    CommandParameter="{x:Type local:AuthorListView}"/>
    </Grid>
</UserControl>
